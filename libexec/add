#!/bin/sh

git_dir=$(git rev-parse --git-dir)
team_text_location=$git_dir/team.txt

touch $team_text_location

[[ -f $git_dir/hooks/pre-commit ]] || pear create-hook-file

# If multiple args given run this script once for each arg
test $2 && {
  for arg in $@
    do $0 $arg
  done
  exit
}

# Append the argument to the text file
echo $1 >> $team_text_location
