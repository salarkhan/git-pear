#!/bin/sh
git_dir=$(git rev-parse --git-dir)

# Create post-commit hook file
[[ -f $git_dir/hooks/post-commit ]] || pear create-hook-file

# If multiple args given run this script once for each arg
test $2 && {
  for arg in $@
    do $0 $arg
  done
  exit
}

# Test for duplicate team members
(pear get-emails | grep $1) > /dev/null 2>&1 || {

  # Append email & full name to config file
  username=$(pear git-username $1)
  name=$(pear git-full-name $username)

  git config --local --add session.names "$name"
  git config --local --add pear.emails $1
}
